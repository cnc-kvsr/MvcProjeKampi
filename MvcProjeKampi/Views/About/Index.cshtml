@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "";
    string aboutStatusColor = "";
    string checkStatus = "";
    string buttonStatusColor = "";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1></h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">
                    Hakkımda Veri Listesi
                </h2>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width:1%">ID</th>
                            <th style="width:20%">Hakkımda</th>
                            <th style="width:20%">Hakkımda</th>
                            <th style="width:20%">Fotoğraf</th>
                            <th style="width:20%">Fotoğraf</th>
                            <th style="width:9%">Durum</th>
                            <th style="width:10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>
                                    <a>
                                        @item.AboutDetails1
                                    </a>
                                </td>
                                <td>@item.AboutDetails2</td>
                                <td>@item.AboutImage1</td>
                                <td>@item.AboutImage2</td>
                                <td>
                                    @switch (item.AboutStatus)
                                    {
                                        case true:
                                            aboutStatusColor = "badge badge-success";
                                            buttonStatusColor = "btn btn-danger";
                                            break;
                                        case false:
                                            aboutStatusColor = "badge badge-danger";
                                            buttonStatusColor = "btn btn-success";
                                            break;
                                    }
                                    <span class="@aboutStatusColor">@item.AboutStatus</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="@buttonStatusColor btn-sm" href="/About/DeleteAbout/@item.AboutID">
                                        <i class="fas fa-trash"></i>
                                        @if (item.AboutStatus==true)
                                        {
                                            checkStatus = "Pasif Yap";
                                        }
                                        else
                                        {
                                            checkStatus = "Aktif Yap";
                                        }
                                        @checkStatus
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>

<a href="/About/AddAbout/">@Html.Action("AboutPartial", "About")</a>

